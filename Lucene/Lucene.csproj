<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>DotLogix.Lucene</AssemblyName>
    <RootNamespace>DotLogix.Core.Lucene</RootNamespace>
	<Company>DotLogix</Company>
    <Product>DotLogix Core</Product>
    <PackageId>DotLogix.Core</PackageId>
    <Authors>DotLogix</Authors>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
</PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /Y $(TargetDir)$(TargetName).dll $(SolutionDir)..\assemblies\$(ConfigurationName)\&#xD;&#xA;xcopy /Y $(TargetDir)$(TargetName).pdb $(SolutionDir)..\assemblies\$(ConfigurationName)\" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Lucene.Net" Version="3.0.3" />
  </ItemGroup>

</Project>
