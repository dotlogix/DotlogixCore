<Project>
  <PropertyGroup>
    <Company>DotLogix</Company>
    <Authors>DotLogix</Authors>
    <RepositoryUrl>https://github.com/dotlogix/DotLogixCore</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Copyright (c) 2018 DotLogix</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Configurations>Debug;Release;</Configurations>
	<VersionPrefix>2.0.0</VersionPrefix>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(Configuration) == 'Debug'">
	<VersionSuffix>preview-0002</VersionSuffix>
  </PropertyGroup>

  <Target Name="CopyAssemblies" AfterTargets="Compile">
    <ItemGroup>
      <AssemblyFiles Include="bin\$(Configuration)\**\$(TargetName).*" Exclude="**\*.deps.json;**\*.nupkg" />
    </ItemGroup>
    <Copy SourceFiles="@(AssemblyFiles)" DestinationFiles="@(AssemblyFiles->'$(SolutionDir)\assemblies\$(Configuration)\$(PackageId)\%(RecursiveDir)\%(Filename)%(Extension)')" />
  </Target>  

  <Target Name="CopyPackage" AfterTargets="Pack">
    <ItemGroup>
      <PackageFiles Include="bin\$(Configuration)\*.nupkg" />
    </ItemGroup>
    <Copy SourceFiles="@(PackageFiles)" DestinationFolder="$(SolutionDir)\nuget\$(Configuration)" />
  </Target>  
</Project>